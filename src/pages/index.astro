---
import Layout from '../layouts/PageLayout.astro';
import Container from '../components/common/Container.astro';
import HomeHero from '../components/heros/HomeHero.astro';
import Card from '../components/Card.astro';


const cards = await Astro.glob('../components/react/post/*.mdx').then(cards =>
	cards.map(({ frontmatter, url }) => ({
		title: frontmatter.title,
		description: frontmatter.description,
		authors: frontmatter.authors,
		featuredImage: frontmatter.featuredImage,
		excerpt: frontmatter.excerpt,
		href: url,
		icon: frontmatter.icon
	}))
);
---

<Layout title="mgeovanydev | Welcome Page">
	<HomeHero />
	<Container>
		<section class="py-12 min-h-screen px-auto">
			<p
				class="text-orange-400 font-bold tracking-wide font-sans uppercase text-xs text-center"
			>
				features
			</p>
			<h2 class="text-center sfont-bold">Favorites Categories ðŸ§¡</h2>
			<div class="grid md:grid-cols-3 sm:grid-cols-1 gap-10">
		 {cards.map(card=> <Card title={card.title} href={card.href} icon={card.icon}/>)} 
		 </div>

		</section>
	</Container>
</Layout>
