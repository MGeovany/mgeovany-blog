---
import { Icon } from 'astro-icon';
import Button from '../../components/common/Button.astro';
import Container from '../../components/common/Container.astro';
import { PICTURES_GRID } from '../../config/aboutPictures';
import { footerSocials } from '../../config/footer';
import PageLayout from '../../layouts/PageLayout.astro';
---

<PageLayout title="About | mgeovanydev">
	<Container>
		<div class="flex flex-col items-center justify-center">
			<picture>
				<img
					class="object-cover rounded-2xl h-52"
					src="assets/images/about-img/mespace.jpeg"
					alt="about mgeovany"
				/>
			</picture>
			<p
				class="mt-10 mb-5 p-3 bg-gray-100 rounded-2xl md:w-2/4 sm:3/4 text-center text-slate-800"
			>
				Hello I'm M Geovany a software developer
			</p>
			<h1 class="font-sans mb-1 md:w-2/4 sm:3/4">Marlon Geovany Castro</h1>
			<p class="font-sans pt-0 mt-0 md:w-2/4 sm:3/4 text-slate-500">
				Software Engineer and web lover üï∑Ô∏è
			</p>
			<div class="md:w-2/4 sm:3/4">
				<h3 class="font-sans font-bold w-full text-left pt-5">Work üë∑‚Äç‚ôÇÔ∏è</h3>
				<p class="font-sans leading-loose">
					Geovany is a professional software engineer who designs, develops, and
					maintains software systems. He use programming languages and software
					development methodologies to create, test, and debug software programs
					for various applications. He may work on a wide range of projects,
					from creating new software applications to maintaining and improving
					existing ones. He also collaborate with other members of the
					development team, such as project managers, designers, and quality
					assurance engineers, to ensure that the software meets the needs of
					the end-users and the business.
				</p>
				<Button
					href="/blog"
					customIcon
					href="https://marloncastro.vercel.app/"
					target="_blank"
				>
					My portfolio
					<Fragment slot="icon">
						<Icon name="ic:baseline-chevron-right" />
					</Fragment>
				</Button>
				<h3 class="mt-7 mb-1 font-sans font-bold">Find me on the web üåä</h3>
				<ul class="my-1 mx-0 p-0 flex flex-col list-none w-fit">
					{
						footerSocials.map((social: any) => (
							<li class="mr-2 text-slate-500 cursor-pointer">
								<a
									href={social.url}
									target="_blank"
									rel="noopener noreferrer"
									class="cursor-pointer flex flex-row items-center py-1 px-3 rounded-xl hover:bg-blue-50 ease-in-out duration-300 "
									title={`Open ${social.name} profile`}
								>
									<Icon
										class="pr-3"
										name={social.icon}
										width="44px"
										height="44px"
									/>
									<span>{social.user}</span>
								</a>
							</li>
						))
					}
				</ul>
			</div>
			<h3 class="font-sans font-bold my-7">Some nice pictures üë∫</h3>
			<div
				class="grid md:grid-cols-2 sm:grid-cols-1 gap-7 w-full justify-items-center"
			>
				{
					PICTURES_GRID.map(item => (
						<picture>
							<img class="object-cover h-auto" src={item.src} alt={item.alt} />
						</picture>
					))
				}
			</div>
		</div>
	</Container>
</PageLayout>
